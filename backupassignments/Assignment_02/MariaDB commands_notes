# to switch the database	
-- Show all the available databases
SHOW DATABASES;
 
-- Use the baseball database
USE baseball;
 
-- Show all the tables in the baseball database
SHOW TABLES;
 
-- Game Table (Don't forget to include limits, or the whole table prints out)
SELECT *
    FROM game 
    LIMIT 0, 20;
 
-- You can also specify the database in your query
SELECT *
    FROM baseball.game 
    LIMIT 0,20;
 
-- Team Table
SELECT *
    FROM team
    LIMIT 0, 20;





